{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Shine",
	"patterns": [
		{ "include": "#keywords" },
		{ "include": "#strings" },
		{ "include": "#comments" }
	],
	"repository": {
		"comments": {
			"name": "comment",
			"begin": "//",
			"end": "\n"
		},
		"keywords": {
			"patterns": [{
				"name": "keyword.control.shine",
				"match": "\\b(if|else)\\b"
			}]
		},
		"strings": {
			"name": "string.quoted.double.shine",
			"begin": "\"",
			"end": "\"",
			"patterns": [{
				"name": "constant.character.escape.shine",
				"match": "\\\\."
			}]
		}
	},
	"scopeName": "source.shi"
}